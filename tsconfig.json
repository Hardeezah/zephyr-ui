{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES6",
            "DOM"
        ],
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "types",
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
        "types": ["styled-components"]

    },
    "include": [
        "lib","src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}